# Generate your own webhook secret and then set it in the GitHub App settings
GITHUB_WEBHOOK_SECRET=my_webhook_secret

# This will be created for you when you create a GitHub App
GITHUB_APP_ID=123456

# The contents of your GitHub App's private key file, including BEGIN and END lines
GITHUB_PRIVATE_KEY_CONTENTS=-----BEGIN RSA PRIVATE KEY-----\nMIIEpAIBAAKCAQEA1234...\n-----END RSA PRIVATE KEY-----

# This is the name of your GitHub app with "[bot]" after it - this is how commits and comments are signed 
GITHUB_APP_USER_NAME=my-github-app[bot]

# Your Anthropic API key for accessing Claude 3.5 model
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Your name and email will be added to the Git config for Aider's commits
# Go here to find your GitHub public-facing email address (ends with @users.noreply.github.com): https://github.com/settings/emails
GIT_COMMIT_AUTHOR_NAME=Your Name
GIT_COMMIT_AUTHOR_EMAIL=youremail@email.com

# Path to the conventions file relative to the repository root
CONVENTIONS_FILE_PATH=./CONVENTIONS.md
